<table>
  <% current_page.data.ingredients.each do |ingredient, amount| %>
    <tr>
      <td>
        <%= amount %>
      </td>
      <td>
        <%= ingredient %>
      </td>
    </tr>
  <% end %>
</table>
<% link_to 'http://instagram.com/urbanplateco', target: "_blank", class: "ingredients__copy" do %>
  <%= image_tag 'icons/clipboard.svg' %>
  Copy list to clipboard
<% end %>

